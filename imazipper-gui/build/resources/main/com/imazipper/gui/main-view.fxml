<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="250.0" prefWidth="390.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/17" fx:controller="com.imazipper.gui.MainController">
