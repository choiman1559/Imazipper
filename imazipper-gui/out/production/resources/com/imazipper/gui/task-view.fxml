<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="250.0" prefWidth="390.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.imazipper.gui.task.TaskController">
    <VBox alignment="CENTER" prefHeight="250.0" prefWidth="390.0">
        <ProgressBar fx:id="ProgressBar" prefHeight="20.0" prefWidth="338.0" />
      <Label fx:id="CurrentStatus" prefHeight="16.0" prefWidth="336.0" text="Label">
         <VBox.margin>
            <Insets bottom="10.0" top="5.0" />
         </VBox.margin>
      </Label>
      <TextArea fx:id="LogViewer" editable="false" prefHeight="128.0" prefWidth="370.0">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </TextArea>
        <HBox alignment="BOTTOM_RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="10.0" prefWidth="390.0">
            <Button fx:id="CloseButton" alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false" onAction="#onCloseClick" prefHeight="24.0" prefWidth="80.0" text="Close" textAlignment="CENTER">
            <HBox.margin>
               <Insets bottom="5.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
        </HBox>
    </VBox>
</Pane>
